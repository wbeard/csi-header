@import "../lib/positions"
@import "../lib/util"
@import "../lib/css3"
@import "../lib/colors"

.app__body
	padding-top 80px
	height 100%
	& .app__body__modules
		padding 10px
		margin-left 200px
		width auto
		background #fff
		overflow-y auto
		height 100%
		& .app__body__module
			width 100%
			height 100%
			display none
			& .module__search
				padding 0
				margin-top 0px
			&.app__body__module--on
				display block
	& .app__body__sidebar
		height 100%
		width 200px
		background #3a3a3a
		overflow-x hidden
		overflow-y auto
		float left
		transition width 0.5s
		& .app__body__sidebar__menu
			list-style none
			padding-left 0
			margin 0 auto
			& .app__body__sidebar__menu__option
				color white
				font-family 'Open-Sans', sans-serif
				padding 10px 0
				padding-left 10px
				margin 30px 0
				font-size 18px
				cursor pointer
				&:hover
					background-color darken(#3a3a3a, 25%)
				&:first-child
					margin-top 15px
				& .fa
					color darken(white, 50%)
				& .app__body__sidebar__menu__option__indicator
					display none
					float right
					color white
					position relative
					right -1px
				&.app__body__sidebar__menu__option--on
					background-color darken(#3a3a3a, 50%)
					& .app__body__sidebar__menu__option__indicator
						display inline-block

.app__body__module__header
	height 50px

@media all and (max-width: 600px) and (min-width: 0px)
	.graph
		display none;
	.app__body
		& .app__body__modules
			margin-left 60px
		& .app__body__sidebar
			width 60px
			& .app__body__sidebar__menu
				& .sidebar__menu__option__text
					display none
				& .app__body__sidebar__menu__option 
					& .fa
						margin-right 1px
					& .app__body__sidebar__menu__option__indicator
						top 4px
						right -2px

.fa-stack 
	& .fa-upper-right
		position relative
		bottom 8px
		left 10px
		color #666
		-webkit-transition -webkit-transform 0.5s, color 0.5s
		transition transform 0.5s, color 0.5s
		&.fa-rotate-180
			color #4CAE4C

.app__body__module__body .panel
	&.panel--locked
		opacity 0.4 !important
		&:hover
			border-color #DDD
			cursor default
			& .options .fa
				opacity 0
				&.fa-eye
					opacity 1
					cursor pointer
		& .fa
			opacity 0.4
			&:hover
				display none
			&.fa-eye:hover
					display inline-block
		& .fa-lock
			display inline-block
	& .fa-lock
		display none
	& .options 
		& .fa
			color #333
			margin-right 10px
			opacity 0
			transition opacity 0.25s
			&:first-child
				margin-left 10px
			&:hover
				opacity 1 !important
	&:hover
		border-color #555
		cursor pointer
		& .fa
			opacity 0.5

.app__body__module__body--drafts .panel
	border-style dashed