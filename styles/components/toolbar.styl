@import "../lib/positions"
@import "../lib/util"
@import "../lib/css3"
@import "../lib/colors"

.toolbar
	box-sizing border-box
	fixed(top, left)
	height 80px
	width 100%
	background white
	margin 0
	padding 10px
	& .toolbar__group
		inline-block()
		relative()
	& .toolbar__group__unit
		box-sizing border-box
		height 60px
		inline-block()
		margin 0 10px
		cursor pointer
		vertical-align top
		& .toolbar__group__unit__link
			height 40px
			line-height 60px
			position relative
			inline-block()
			color black
			text-decoration none
			font-size 16px
			font-family 'Open-Sans', sans-serif
			&:hover
				color darken(success, 50%)
			& .fa
				color success
			& .toolbar__group__unit__link__img
				width 60px
				height 60px
		& .toolbar__group__unit__indicator
			text-align center
			color #e3e3e3
			z-index 999
			display none
			&.toolbar__group__unit__indicator--on
				display block
			&.toolbar__group__unit__indicator--avatar
				position relative
				top -25px
				right 15px
		& .toolbar__group__unit__dropDownMenu
			position absolute
			width 200px
			height 200px
			background #e3e3e3
			border-radius(5px)
			top 70px
			right 20px
			z-index 998
			display none
			&.toolbar__group__unit__dropDownMenu--on
				display block
		& .toolbar__group__unit__dropDownMenu--apps
			width 350px
		& .toolbar__group__unit__link--logo
			vertical-align top
			font-size 24px
			color black
		& .toolbar__group__unit__link--avatar
			width 60px
			height 60px
			inline-block()
			relative()
			& .toolbar__group__unit__link--avatar__image
				absolute(top, left)
				border-radius(5px)
				z-index 2
		&:last-child
			margin-right 0px
		&:first-child
			margin-left 0px;
	& .toolbar__group--right
		float right
	& .toolbar__loader
		width 100%
		height 5px
		background-color darken(emerald, 20%)
		position absolute
		bottom -2px
		left 0
		z-index -1
.shadow_overlay
	background-radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.3), 1%, rgba(0,0,0,.5), 100%)