@import "../lib/positions"
@import "../lib/util"
@import "../lib/css3"
@import "../lib/colors"

.toolbar
	box-sizing border-box
	fixed(top, left)
	height 80px
	width 100%
	background white
	margin 0
	padding 10px
	box-shadow(0, 2px, 4px, #1f1f1f)
	z-index 1
	&.toolbar--loading .toolbar__loadIndicator
		display block
	& .toolbar__loadIndicator
		display none
		margin 0 auto
		text-align center
	& .toolbar__group
		width 33%
		inline-block()
		relative()
	& .toolbar__group--last
		width auto
	& .toolbar__group--left
		float left
		overflow-y hidden			
	& .toolbar__group__unit
		box-sizing border-box
		height 60px
		inline-block()
		margin 0 10px
		cursor pointer
		vertical-align top
		& .toolbar__group__unit--responsive
			display block
		& .toolbar__group__unit__link
			height 40px
			line-height 60px
			position relative
			inline-block()
			color black
			text-decoration none
			font-size 16px
			font-family 'Open-Sans', sans-serif
			&:hover
				color lighten(black, 50%)
			& .fa
				color success
				font-size 24px
				vertical-align middle
			& .toolbar__group__unit__link__img
				width 60px
				height 60px
		& .toolbar__group__unit__indicator
			text-align center
			color white
			z-index 999
			text-shadow 0 0 3px black
			display none
			&.toolbar__group__unit__indicator--on
				display block
			&.toolbar__group__unit__indicator--avatar
				position relative
				top -25px
				right 15px
				z-index 2
		& .toolbar__group__unit__dropDownMenu
			position absolute
			width 200px
			height 200px
			overflow-y auto
			background white
			border-radius(5px)
			box-shadow(0, 2px, 4px, #1f1f1f)
			top 70px
			right 20px
			z-index 998
			display none
			&.toolbar__group__unit__dropDownMenu--on
				display block
			&.toolbar__group__unit__dropDownMenu--autoHeight
				height auto
		& .toolbar__group__unit__dropDownMenu--apps
			padding 10px
			width 300px
		& .toolbar__group__unit__link--logo
			vertical-align top
			font-size 24px
			color black
		& .toolbar__group__unit__link--avatar
			width 60px
			height 60px
			inline-block()
			relative()
			& .toolbar__group__unit__link--avatar__image
				absolute(top, left)
				border-radius(5px)
				z-index 2
			&.avatar--empty
				& + .toolbar__group__unit__link--editAvatar
					display block
		& .toolbar__group__unit__link--editAvatar
			display none
			absolute(bottom, right)
			z-index 3
			& .toolbar__group__unit__link--editAvatar__icon
				color white
				text-shadow 0 0 3px black
				&:hover
					color success
		&:last-child
			margin-right 0px
		&:first-child
			margin-left 0px;
	& .toolbar__group--right
		float right
	& .toolbar__loader
		width 100%
		height 5px
		background-color darken(emerald, 20%)
		position absolute
		bottom -2px
		left 0
		z-index -1

.toolbar__group__unit__dropDownMenu
	text-align center
	& .apps__app
		inline-block()
		padding 15px
		border-radius(3px)
		&:hover
			background success
			color white
			& i
				color white
		& .apps__app__appName
			font-family 'Open-Sans', sans-serif
		& i
			color success
	& .dropDownMenu__menu
			list-style none
			text-align left
			padding 0
			margin 2px
			& > .dropDownMenu__menu__optionGroup--responsive__groupName
				border 0px
	& .dropDownMenu__menu__option
		font-family 'Open-Sans', sans-serif
		font-size 14px
		margin 5px
		padding 5px
		border-radius 3px
		& i
			color lighten(black, 50%)
		&:hover
			color white
			background-color success
			& i
				color white
	& .dropDownMenu__menu__optionGroup--responsive
		display none
		list-style none
		padding 0
	& .dropDownMenu__menu__optionGroup--responsive__groupName
		font-family 'Open-Sans', sans-serif
		padding-left 12px
		color lighten(black, 50%)
		padding-top 5px
		border-top solid 1px lighten(black, 50%)
		margin 0
		display none
	
			
@media all and (max-width: 804px) and (min-width: 0px)
	.toolbar__group__unit__dropDownMenu 
		& .dropDownMenu__menu__optionGroup--responsive
			display block
		& .dropDownMenu__menu__optionGroup--responsive__groupName
			display block
	.toolbar .toolbar__group__unit--responsive
		display none
		
@media all and (max-width: 600px) and (min-width: 0px)
	.toolbar .toolbar__group
		width 45%
		&.toolbar__group--last
			width auto
	.toolbar .toolbar__group--center
		display none

.shadow_overlay
	background-radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.3), 1%, rgba(0,0,0,.5), 100%)